<view class="container"><weui-tabs class="theTab" vue-id="1" current="{{current}}" tabs="{{tabs}}" sliderLeft="{{sliderLeft}}" sliderOffset="{{sliderOffset}}" data-event-opts="{{[['^tabClick',[['tabClick']]]]}}" bind:tabClick="__e" bind:__l="__l"></weui-tabs><view class="content"><block wx:for="{{data}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['myDetail',['$0'],[[['data','',index,'id']]]]]]]}}" class="line" bindtap="__e"><block wx:if="{{item.task_images.length>0}}"><image class="left" src="{{imgurl+item.task_images[0]}}"></image></block><block wx:if="{{item.task_images.length<1}}"><image class="left" src="{{defaultImgSrc}}"></image></block><view class="right"><view class="line_inner"><view class="inner_left"><text class="tex bigFont">{{"【"+item.title+"】"}}</text><block wx:if="{{item.audit_state==4}}"><text class="tex redFont">已到期</text></block><block wx:if="{{item.audit_state==3}}"><text class="tex redFont">已完成</text></block><block wx:if="{{item.audit_state==2}}"><text class="tex redFont">未通过</text></block><block wx:if="{{item.audit_state==1}}"><text class="tex redFont">已通过</text></block><block wx:if="{{item.audit_state==0}}"><text class="tex redFont">待审核</text></block></view><text class="tex redFont">{{"￥"+item.publish_price+"元"}}</text></view><view class="line_inner"><view class="inner_left"><text class="tex">{{item.type_name}}</text><text class="tex">{{"剩余"+item.remain_count+"份"}}</text></view><text class="tex">{{"已完成："+(item.publish_count-item.remain_count)+"份"}}</text></view><view class="line_inner"><view class="inner_left"><text class="tex">{{"No:"+item.task_no}}</text></view><text class="tex">{{item.endtime_text}}</text></view></view></view></block></view></view>