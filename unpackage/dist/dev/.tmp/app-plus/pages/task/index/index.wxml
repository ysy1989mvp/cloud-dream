<view class="tabs"><scroll-view class="scroll-h" id="tab-bar"><view class="line_inner"><block wx:for="{{tabBars}}" wx:for-item="tab" wx:for-index="index" wx:key="id"><view class="uni-tab-item" id="{{tab.id}}" data-current="{{index}}" data-event-opts="{{[['tap',[['ontabtap',['$event']]]]]}}" bindtap="__e"><text class="{{['uni-tab-item-title',tabIndex==index?'uni-tab-item-title-active':'']}}">{{tab.name}}</text></view></block></view></scroll-view><view class="container"><block wx:for="{{data}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['taskDetail',['$0'],[[['data','id',item.id,'id']]]]]]]}}" class="part part_lower" bindtap="__e"><block wx:if="{{item.task_images.length>0}}"><view class="left"><image src="{{imgurl+item.task_images[0]}}"></image></view></block><block wx:if="{{item.task_images.length<1}}"><view class="left"><image src="{{defaultImgSrc}}"></image></view></block><view class="right"><text class="tex bigFont">{{"【"+item.task_no+"】"+item.title}}</text><view><text class="tex douyin">{{item.type_name}}</text></view><view class="small"><text class="tex">{{"剩余："+item.remain_count}}</text><text class="tex" style="margin-left:40rpx;">{{item.endtime_text}}</text></view></view><button class="btn">{{"¥"+item.publish_price+"元"}}</button></view></block></view><view class="loading">{{loadingText}}</view></view>