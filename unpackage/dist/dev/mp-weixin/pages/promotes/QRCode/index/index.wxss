
.content{
	background-color: #FFFFFF;
	height: calc(100vh);
}
.title{
	height: calc(100vh * 0.15);
	text-align: center;
	font-size: 14px;
}
.qrcode{
	height: calc(100vh * 0.6);
}
.img{
	text-align: center;
}
.img image{
	width: 50%;
}
.tip{
	height: calc(100vh * 0.25);
}
.line{
	height: 5rpx;
	width: 90%;
	background-color: #E5E5E5;
	margin: 0 auto;
}
.tiptitle{
	color: #ED4040;
}
.tipcontent{
	font-size: 14px;
}
.tipcontent ._span{
	display: block;
}

